            position:absolute;
            top:0;
            z-index:9999;
            display:table;
            width:100%;
            height:100%;
            background:#000;
          opacity: 1; 
       -webkit-transition: opacity 1.5s;  
       -moz-transition: opacity 0.3s;  
       -webkit-animation-timing-function: ease-out;  
       -moz-animation-timing-function: ease-out;  
        }
            .mobile-loading > div {
                display:table-cell;
                vertical-align:middle;
                text-align:center;
                color:#fff;
                font-weight:bold;
            }
        .topnavi, .topnavi-ul {
            height: 45px;
        }

        .topnavi-ul {
            background: #000;
        }

        a {
            text-decoration: none;
        }

        .topnavi-ul, .topnavi-list, .position-left-div, .position-left-div-mask {
            position: fixed;
        }

            .topnavi-list > ul, .topnavi-ul li:nth-child(2) i, .topnavi-ul > li:last-child, .topnavi-ul li a, .position-left-div ul li {
                color: #fff;
            }

            .topnavi-ul, .position-left-div ul, .topnavi-list > ul {
                list-style: none;
            }

        .topnavi-ul {
            z-index: 8;
            top: 0;
            left: 0;
            width: 100%;
            margin: 0;
            padding: 0;
        }

            .topnavi-ul li {
                float: left;
                width: 33.3%;
            }

            .topnavi-ul li {
                text-align: center;
                line-height: 45px;
            }

            .topnavi-ul > li:nth-child(2) i {
                font-size: 20px;
                width: 31px;
                height: 31px;
                line-height: 31px;
                display: block;
                margin: auto;
                padding: 7px;
            }

            .topnavi-ul li:last-child i {
                display: block;
                margin: auto;
                width: 31px;
                height: 31px;
                padding: 7px;
                line-height: 31px;
                font-size: 20px;
            }

            .topnavi-ul li a {
