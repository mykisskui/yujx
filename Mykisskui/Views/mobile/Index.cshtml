@{

    Layout = string.Empty;
}
<html>
<head>
    <title>Home</title>
    <meta charset="utf-8" />
    <meta name="viewport" content=" initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <link href="~/Font-Awesome-3.2.1/css/font-awesome.min.css" rel="stylesheet" />
    <!-- css -->
    <style>
        body {
            margin: 0;
            font-family: 'Microsoft YaHei';
            max-width:640px;
            margin:auto;
        }

            .topnavi, .topnavi-ul {
                height: 35px;
                background: #000;
            }
        a {
            text-decoration:none;
        }
        .topnavi-ul , .topnavi-list,.position-left-div,.position-left-div-mask {
            position:fixed;
        }
            .topnavi-list > ul,.topnavi-ul li:nth-child(2) i, .topnavi-ul > li:last-child, .topnavi-ul li a,.position-left-div ul li {
                color:#fff;
            }
            .topnavi-ul, .position-left-div ul,.topnavi-list > ul  {
                  list-style: none;
            }
                .topnavi-ul {
                    z-index:8;
                    top: 0;
                    left: 0;
                    width: 100%;
                    display: -webkit-box;
                    display: -moz-box;
                    margin: 0;
                    padding: 0;
                }
                    .topnavi-ul li {
                        -webkit-box-flex: 1;
                    }
                    .topnavi-ul li {
                        text-align: center;
                        line-height: 35px;
                    }
                        .topnavi-ul > li:nth-child(2) i {
                                font-size: 20px;
                                width: 20px;
                                height: 20px;
                                display: block;
                                margin: auto;
                                padding: 7px 7px 8px 7px;
                        }
                        .topnavi-ul li:last-child {
                            text-align: right;
                            padding: 0 20px 0 0;
                            font-size: 20px;
                        }

                        .topnavi-ul li a {
                            font-size: 20px;
                        }
        .position-left-div {
            left:0;
            top:0;
            width:80%;
            height:100%;
            z-index:10;
             transition:all 0.5s;
             -webkit-transition:all 0.5s;
                background:rgba(0,0,0,0.8);

        }
        .position-left-div-mask {
            top:0;
            left:0;
            display:none;
            width:100%;
            height:100vh;
            background:rgba(255,255,255,0);
            z-index:9;
        }
            .position-left-div ul {
     
                margin:0;
                padding:0;
            }
            .position-left-div  > div{
                padding:40px 20px 0 20px;
            }
            .position-left-div ul li {
                text-align:center;
                padding:7px 0;
                border-bottom:1px solid rgba(68, 68, 68, 0.64);
                font-weight:100;
            }
        .topnavi-list {
            left:0;
            width:100%;
            background:#000;
            top:-50px;
            transition:all 0.3s;
        }
            .topnavi-list > ul {
               margin:0;
               padding:0;
               display:box;
               display:-webkit-box;
            }
            .topnavi-list ul li {
                -webkit-box-flex:1;
                padding:0!important;
                text-align:center!important;
                margin:5px 0;
                border-right:1px solid rgba(255,255,255,0.16);
            }
                .topnavi-list ul li a {
                font-size:14px!important;
                }
    </style>
    <!-- css -->
</head>
<body>
    <!--navi start-->
    <div class="topnavi">
        <ul id="topnavi-ul" class="topnavi-ul">
            <li>
                <a>
                    BLOG
                </a>
            </li>
            <li>
                <!--icon-chevron-up-->
                <!--icon-chevron-down-->
                <i class="icon-chevron-down"></i>
                <div class="topnavi-list">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a>文章</a></li>
                        <li><a>留言板</a></li>
                        <li><a>GitHub</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <i class="icon-align-justify"></i>
            </li>
        </ul>
     
    </div>
    <!--navi end-->

    <!-- left div start -->
    <div class="position-left-div-mask"></div>
        <div class="position-left-div" >
                <div>
                    <div>
                        <ul>
                            <li>
                                学
                            </li>
                            <li>
                                Web前端工程师
                            </li>
                            <li>
                                地球
                            </li>
                            <li>
                                010-2655-7362
                            </li>
                            <li>
                                mykisskui@gmail.com
                            </li>
                        </ul>
                    </div>
                </div>
        </div>
    <div style="width:100%;height:2000px;"></div>
    <!-- left div end -->
    <script>
        var dom = document;
        var positionLeftDiv = dom.querySelector('.position-left-div');
        var positionLeftDivMark = dom.querySelector('.position-left-div-mask');
        var bodyWidth = dom.body.clientWidth;
        var conf = {};
        conf.init = function () {
           positionLeftDiv.style.cssText = 'transform:translate3d(-' +bodyWidth+ 'px,0,0);';
        }();
        conf.naviList = dom.querySelector('.topnavi-list');
        dom.getElementById('topnavi-ul').addEventListener('touchend', function (e) {
            var _target = e.target;
            switch (_target.className) {

                case 'icon-align-justify':
                    positionLeftDiv.style.cssText = 'transform:translate(0,0);';
                    positionLeftDivMark.style.cssText = 'display:block;';
                    break;
                case 'icon-chevron-down':
                    conf.naviList.style.cssText = 'transform:translate3d(0,85px,0)';
                    _target.className = 'icon-chevron-up';
                    break;
                case 'icon-chevron-up':
                    conf.naviList.style.cssText = 'transform:translate3d(0,0,0);';
                    _target.className = 'icon-chevron-down';
                    break;
            }
        });
        positionLeftDivMark.addEventListener('touchend', function (e) {
                
            positionLeftDiv.style.cssText = 'transform:translate3d(-' + bodyWidth + 'px,0,0);';
            positionLeftDivMark.style.cssText = 'display:none;';

        });
    </script>
</body>
</html>