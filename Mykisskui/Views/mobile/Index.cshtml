    <script>

        //使用fastclick 解决click事件300ms的延迟问题
        window.addEventListener('load', function () {
            FastClick.attach(document.body);
        }, false);

        var dom = document;
        var positionLeftDiv = dom.querySelector('.position-left-div');
        var positionLeftDivMark = dom.querySelector('.position-left-div-mask');
        var bodyWidth = dom.body.clientWidth;
        var conf = {};
        conf.main = dom.querySelector('#mobileIndex');//默认主窗体
        conf.loading = dom.querySelector('.mobile-loading');
        conf.mobileIndex = dom.querySelector('#mobileIndex');//index
        conf.mobileList = dom.querySelector('#mobileList');//list
        conf.mobileMessage = dom.querySelector('#mobileMessage');//message
        conf.mobileListDetails = dom.querySelector('#mobileListDetails');//details
        conf.mobileListDetailsNavi = dom.querySelector('.mobileListDetailsNavi');
        conf.mobileDetailsparent = null; //details parent 
        conf.mobileForm = dom.querySelector('.mobileForm');//
        conf.imageList = new Array(),conf.imageID = new Array();
        conf.naviList = dom.querySelector('.topnavi-list');
        conf.mobileImage = dom.querySelectorAll('.mobile-image-ul');
        conf.init = function () {
            dom.body.scrollTop = 0;
            conf.loading.style.cssText = 'opacity:0;';
            dom.ontouchstart = function () {
                return false;
            }
            setTimeout(function () {
                conf.loading.style.cssText = 'display:none;';
                dom.ontouchstart = function () {
                    return true;
                }
            }, 1500);
            positionLeftDiv.style.cssText = 'transform:translate3d(-' + bodyWidth + 'px,0,0);';
            setTimeout(function () {
                positionLeftDiv.className += ' transitionall';
            }, 500);
            for (var i = 0; i < conf.mobileImage.length; i++) {
                ImageWidth(conf.mobileImage[i],0);
            }
            conf.mobileList.style.cssText = 'transform:translate(-' + bodyWidth + 'px,0)';
            conf.mobileMessage.style.cssText = 'transform:translate(-' + bodyWidth + 'px,0)';
            conf.mobileListDetails.style.cssText = 'transform:translate(-' + bodyWidth + 'px,0)';
            conf.mobileListDetailsNavi.style.cssText = 'transform:translate(-' + bodyWidth + 'px,0)';
        }();
        dom.addEventListener('click', function (e) {
            var _target = e.target, f = true;
            while (f) {
                if (_target.className == 'mobileForm') {
                    f = false;
                    mobileFormSwitch(_target);//切换
                } else if (_target.className == 'mobileDetails') {
                    mobiledetails(_target);
                    //console.log(_target.getAttribute('data-id'));

                    f = false;
                }
                else if (_target.localName == 'body') {
                    f = false;
                } else {
                    _target = _target.parentNode;
                }
            }
            mobiledetailsnavi(_target);
        });
        conf.mobileListDetailsNavi.addEventListener('click', function (e) {
            conf.mobileDetailsparent.style.cssText = 'transform:translate(0,0);';
            conf.main.style.cssText = 'transform:translate(-' + bodyWidth + 'px,0);';
            conf.main = conf.mobileDetailsparent;
        });
        dom.getElementById('topnavi-ul').addEventListener('touchend', function (e) {
            var _target = e.target;
            switch (_target.className) {
                case 'icon-align-justify':
                    positionLeftDiv.style.cssText = 'transform:translate(0,0);';
                    positionLeftDivMark.style.cssText = 'display:block;';
                    dom.ontouchstart = function () {
                        return false;
                    }
                    break;
                case 'icon-chevron-down':
                    conf.naviList.style.cssText = 'transform:translate3d(0,110px,0)';
                    _target.className = 'icon-chevron-up';
                    break;
                case 'icon-chevron-up':
                    conf.naviList.style.cssText = 'transform:translate3d(0,0,0);';
                    _target.className = 'icon-chevron-down';
                    break;
            }
        });
        positionLeftDivMark.addEventListener('touchend', function (e) {
            positionLeftDiv.style.cssText = 'transform:translate3d(-' + bodyWidth + 'px,0,0);';
            positionLeftDivMark.style.cssText = 'display:none;';
            dom.ontouchstart = function () {
                return true;
            }
        });
        function mobileFormSwitch(a) {
            var _self = a.getAttribute('data-form');
            if (conf[_self] == conf.main) return false;
                conf[_self].style.cssText = 'transform:translate(0,0);';
                conf.main.style.cssText = 'transform:translate(-' + bodyWidth + 'px,0)';
            conf.main = conf[_self];
        }
        function mobiledetails(a) {
            var _self = a.getAttribute('data-id');
